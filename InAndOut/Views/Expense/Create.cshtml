
@model InAndOut.Models.Expense

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add expense</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>

                    </div>
                    <div class="col-6">
                        <label asp-for="AmountOfMoney"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="AmountOfMoney" class="form-control" />
                        <span asp-validation-for="AmountOfMoney" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 text-center offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>