
@model IEnumerable<InAndOut.Models.Expense>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new expense</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name of expense
                    </th>
                    <th>
                        Amount of money
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="10%">@expense.Id</td>
                        <td width="45%">@expense.ExpenseName</td>
                        <td width="45%">@expense.AmountOfMoney</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses created yet</p>
    }
</div>